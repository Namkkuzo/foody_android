    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/food">
            <ImageView
                android:id="@+id/ic_like"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="180dp"
                android:src="@drawable/ic_baseline_favorite_24"

                app:layout_constraintVertical_chainStyle="packed" />


            <ImageView
                android:id="@+id/ic_time"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="180dp"
                android:src="@drawable/ic_baseline_access_time_24"

                app:layout_constraintVertical_chainStyle="packed" />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gà quay"

                    android:textColor="@color/black"
                    android:textSize="30sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rdVegan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vegan"

                        android:enabled="false"
                        android:textColor="@color/black"></RadioButton>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dairy Free"
                        android:id="@+id/rdDairy"
                        android:enabled="false"
                        android:textColor="@color/black"></RadioButton>
                    <RadioButton
                        android:id="@+id/rdHealthy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Healthy"
                        android:enabled="false"
                        android:textColor="@color/black"></RadioButton>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rdVegetarian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vegetarian"
                        android:enabled="false"
                        android:textColor="@color/black"></RadioButton>
                    <RadioButton
                        android:id="@+id/rdGlutentFree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Glutent Free"
                        android:enabled="false"
                        android:textColor="@color/black"></RadioButton>
                    <RadioButton
                        android:id="@+id/rdCheap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cheap"
                        android:enabled="false"
                        android:textColor="@color/black"></RadioButton>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="- Mô tả"
                        android:textColor="@color/gray"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="fjdsfhjdfhdfdoifdiofoidfdfdf"
                        android:layout_marginTop="10dp"/>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="- Các bước"
                        android:textColor="@color/gray"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/tvStep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="fjdsfhjdfhdfdoifdiofoidfdfdf"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

            </LinearLayout>

    </LinearLayout>


</FrameLayout>